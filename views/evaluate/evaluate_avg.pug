extends ../layout

block content
  h1.title_1 평가 관리
  // main 시작
  div.main
    //main_content navbar
    div.main_nav
      nav.navbar.navbar-light.bg-light
      .container-fluid
        a.main_a.navbar-brand(href='/evaluate') 평가 조회
        a.main_a.navbar-brand(href='/evaluate/evaluate_avg') 항목 평균 조회
        a.main_a.navbar-brand(href='/evaluate/submit_e') 직원 평가 정보 입력
        a.main_a.navbar-brand(href='/evaluate/update_e') 직원 평가 정보 수정
        a.main_a.navbar-brand(href='/evaluate/submit_c') 고객 평가 정보 입력
        a.main_a.navbar-brand(href='/evaluate/update_c') 고객 평가 정보 수정
        a.main_a.navbar-brand(href='/evaluate/submit_p') PM 평가 정보 입력
        a.main_a.navbar-brand(href='/evaluate/update_p') PM 평가 정보 수정
    //main_content 
    div.main_conent
      h3.title_2 항목 평균 조회
      //검색창 시작
      form.row.row-cols-lg-auto.g-3.align-items-center(action='/evaluate/evaluate_avg', method='GET')
        .col-1
          label 사번
        .col-2
          input#inlineFormInputGroupUsername.form-control(type='text', placeholder='사번 입력', name='employee_id')
        .col-2
          label 항목
        .col-2#a
          select(aria-label='항목', name='list')
            option(name='a') 업무수행
            option(name='b') 커뮤니케이션
        .col-3
          button.btn.btn-primary(type='submit') 조회
      //table 시작
      table.table.test
        tr
          th 이름
          th 총 참여 프로젝트 개수
          th 항목
          th 평균 점수
        
        if(rows)
          tr
            each index in rows[0]
              th #{index.employee_name}
            each index in rows[1]
              th #{index.count}
            each index in rows[2]
              th 동료평가
              th #{index.avg}
          tr
            each index in rows[0]
              th #{index.employee_name}
            each index in rows[3]
              th #{index.count}
            each index in rows[4]
              th PM평가
              th #{index.avg}
          tr
            each index in rows[0]
              th #{index.employee_name}
            each index in rows[5]
              th #{index.count}
              th 고객평가
            each index in rows[6]
              th #{index.avg}

