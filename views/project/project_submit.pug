extends ../layout
block content
    h1.title_1 프로젝트 관리
    // main 시작
    div.main
        //main_content navbar
        div.main_nav
            nav.navbar.navbar-light.bg-light
            .container-fluid
                a.main_a.navbar-brand(href='/project') 프로젝트 정보 등록
                a.main_a.navbar-brand(href='/project/modify') 프로젝트 정보 수정
                a.main_a.navbar-brand(href='/project/view') 프로젝트 정보 조회
        //main_content 
        div.main_conent
            h3.title_2 프로젝트 정보 등록
            div.table_div
                //table 시작
                table.table.table-bordered
                    tbody
                        tr
                            td 프로젝트 번호
                            td 
                                input#project_id.form-control(type='text' aria-label='Project id')  
                            td 프로젝트명
                            td 
                                input#project_name.form-control(type='text' aria-label='Project name')
                        tr
                            td 착수일자
                            td 
                                input#project_start_date.form-control(type='date' aria-label='Start date')  
                            td 종료일자
                            td 
                                input#project_terminate_date.form-control(type='date' aria-label='End date')  
                        tr
                            td 발주처
                            td 
                                input#customer_name.form-control(type='text' aria-label='Customer name')  
                            td 프로젝트 규모
                            td 
                                input#project_type.form-control(type='text' aria-label='Project type')  
                a#submit.btn.btn-primary 등록
                script(src="https://unpkg.com/axios/dist/axios.min.js")
                script(src ="/javascripts/project_submit.js")
 

